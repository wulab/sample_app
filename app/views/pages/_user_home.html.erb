<table class="front" summary="For signed-in users">
  <tr>
    <td class="main">
      <h1 class="micropost">What's up?<span id="counter"></span></h1>
      <%= render 'shared/micropost_form' %>
      <%= render 'shared/feed' %>
    </td>
    <td class="sidebar round">
      <%= render 'shared/user_info' %>
    </td>
  </tr>
</table>

<script type="text/javascript">
  /* Source: http://www.youtube.com/watch?v=SHHEFMvDIPY */
  document.observe("dom:loaded", function() {
    charCount('micropost_content', 140);
    $('micropost_content').observe("keyup", function() { charCount('micropost_content', 140); });
  });
</script>
